<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.umss.awichu">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Awichu">
        <activity
                android:name=".menuLateral.ui.recordatorios.AddNote"
                android:exported="true"/>
        <activity
                android:name=".menuLateral.ui.recordatorios.CreateRemind"
                android:exported="true"/>
        <activity
                android:name=".menuLateral.MenuLateralActivity"
                android:exported="true"
                android:label="@string/title_activity_menu_lateral"
                android:screenOrientation="portrait"
                android:theme="@style/Theme.Awichu.NoActionBar"/>
        <activity
                android:name=".presentation.authentification.passwordRecover.view.PasswordRecoverActivity"
                android:exported="true"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".presentation.authentification.registro.view.RegisterActivity"
                android:exported="true"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".presentation.main1.view.MainAwichuActivity"
                android:exported="true"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".presentation.main1.view.mainAwichuActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:exported="true"
                android:label="@string/title_activity_main_awichu"
                android:theme="@style/Theme.Awichu.Fullscreen"/>
        <activity
                android:name=".presentation.authentification.login.view.MainActivity"
                android:exported="true"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>