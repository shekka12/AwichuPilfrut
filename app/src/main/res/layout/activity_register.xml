<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo1"
        tools:context=".presentation.authentification.registro.view.RegisterActivity">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/corazon"
            android:id="@+id/icono2"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloR"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#116530"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/icono2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="Nombre"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tituloR"
            android:layout_marginTop="8dp" android:layout_marginEnd="32dp" android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="@string/nombrecompleto"
            android:paddingLeft="15dp"
            android:ems="10"
            android:maxLength="14"
            android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
            android:id="@+id/etx_fullname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            android:minHeight="40dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/etx_fullname" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="8dp"/>
    <EditText
            android:id="@+id/etx_lastname"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:minHeight="40dp"
            android:maxLength="14"
            android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
            android:hint="Apellido"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/etx_lastname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textEmailAddress"
            android:hint="@string/correo_electronico"
            android:paddingLeft="15dp"
            android:ems="10"
            android:id="@+id/etx_emailRegistro"
            android:minHeight="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp" tools:ignore="TouchTargetSizeCheck"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_emailRegistro" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="8dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            app:passwordToggleEnabled="true"
            android:minHeight="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:id="@+id/textInputLayout2">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:id="@+id/etx_passwordRegistro"
                android:hint="@string/contrase_a"
                android:layout_gravity="center"
                android:minHeight="40dp"
                android:background="@color/white"
                android:maxLength="14"
                android:inputType="textPassword"
                android:ems="10"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
            android:text="Verificar Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            app:passwordToggleEnabled="true"
            android:minHeight="40dp"
            tools:ignore="TextContrastCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.428" android:id="@+id/textInputLayout3">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:id="@+id/etx_passwordRegistro2"
                android:layout_gravity="center"
                android:hint="@string/confirme_contrase_a"
                android:inputType="textPassword"
                android:background="@color/white"
                android:maxLength="14"
                android:ems="10"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:hint="Registrarse"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/buttonRegistro"
            android:backgroundTint="#116530"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/progressSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etx_passwordRegistro2"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <Button
            android:hint="Cancelar"
            android:textColorHint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#18A558"
            android:textStyle="bold"
            android:textSize="14dp"
            android:id="@+id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegistro" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>