<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo1"
        tools:context=".presentation.authentification.registro.view.RegisterActivity">


    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/corazon"
            android:id="@+id/icono2"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloR"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#116530"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/icono2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginStart="32dp"/>

    <TextView
            android:text="Nombre"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloR"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_margin="8dp"
            app:layout_constraintHorizontal_bias="0.096" android:layout_marginTop="8dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="0dp"
            android:layout_gravity="center"

            android:background="@color/cardview_shadow_end_color"
            android:id="@+id/textInputLayout"

            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/cardview_shadow_end_color"
            android:visibility="visible"
            android:textColorHint="@color/black_overlay"
            app:hintTextColor="#009688"

            app:counterMaxLength="14"
            android:elevation="3dp"
            app:counterEnabled="true"
            app:counterTextColor="@color/design_default_color_error"

            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/etx_fullname"
                android:hint="@string/nombre_completo"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:maxLength="14"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                android:textColorLink="@color/teal_200"
                android:textColorHighlight="@color/teal_700"
                tools:ignore="Autofill,TouchTargetSizeCheck"
                android:background="@color/white"
                android:textAllCaps="false"
                android:textSize="16dp"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:text="Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.027"
    />
    <com.google.android.material.textfield.TextInputLayout

            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_shadow_end_color"
            android:textColorHint="@color/black_overlay"
            app:hintTextColor="#009688"

            app:counterMaxLength="14"
            android:elevation="3dp"
            app:counterEnabled="true"
            app:counterTextColor="@color/design_default_color_error"

            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/textInputLayout4">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/etx_lastname"
                android:inputType="textPersonName"
                android:hint="Apellido"
                android:minHeight="40dp"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
                android:maxLength="14"
                android:textColorLink="@color/teal_200"
                android:textColorHighlight="@color/teal_700"
                tools:ignore="Autofill,TouchTargetSizeCheck"
                android:background="@color/white"
                android:textAllCaps="false"
                android:textSize="16dp"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:text="Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.029"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_shadow_end_color"
            android:textColorHint="@color/black_overlay"
            app:hintTextColor="#009688"

            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            tools:ignore="TouchTargetSizeCheck" android:id="@+id/textInputLayout5">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/etx_emailRegistro"
                android:hint="@string/correo_electronico"
                android:inputType="textEmailAddress"
                android:minHeight="40dp"
                android:textColorLink="@color/teal_200"
                android:textColorHighlight="@color/teal_700"
                tools:ignore="Autofill,TouchTargetSizeCheck"
                android:background="@color/white"
                android:textAllCaps="false"
                android:textSize="16dp"

        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.034"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_shadow_end_color"

            android:elevation="3dp"
            app:counterEnabled="true"
            app:counterTextColor="@color/design_default_color_error"
            app:counterMaxLength="14"

            android:minHeight="40dp"
            android:textColorHint="@color/black_overlay"
            app:hintTextColor="#009688"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:id="@+id/textInputLayout2">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:id="@+id/etx_passwordRegistro"
                android:hint="@string/contrase_a"
                android:layout_gravity="center"
                android:minHeight="40dp"
                android:background="@color/white"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890"
                android:maxLength="14"
                android:textColorLink="@color/teal_200"
                android:textColorHighlight="@color/teal_700"
                tools:ignore="Autofill,TouchTargetSizeCheck"
                android:inputType="textPassword"
                android:ems="10"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
            android:id="@+id/ivHidePassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hide_password_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textInputLayout"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.654"/>

    <TextView
            android:text="Verificar Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.04"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_shadow_end_color"
            app:hintTextColor="#009688"

            android:elevation="3dp"
            app:counterEnabled="true"
            app:counterTextColor="@color/design_default_color_error"
            app:counterMaxLength="14"

            android:minHeight="40dp"
            android:textColorHint="@color/black_overlay"
            tools:ignore="TextContrastCheck"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.428" android:id="@+id/textInputLayout3">
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:id="@+id/etx_passwordRegistro2"
                android:layout_gravity="center"
                android:hint="@string/confirme_contrase_a"
                android:inputType="textPassword"
                android:background="@color/white"
                android:maxLength="14"
                android:textColorLink="@color/teal_200"
                android:textColorHighlight="@color/teal_700"
                tools:ignore="Autofill,TouchTargetSizeCheck"
                android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890"
                android:ems="10"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
            android:id="@+id/ivHidePassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hide_password_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textInputLayout"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.796"/>
    <Button
            android:hint="Registrarse"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/buttonRegistro"
            android:backgroundTint="#116530"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <Button
            android:hint="Cancelar"
            android:textColorHint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#18A558"
            android:textStyle="bold"
            android:textSize="14dp"
            android:id="@+id/buttonCancel"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegistro" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:visibility="gone"
            android:id="@+id/progressSignUp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>