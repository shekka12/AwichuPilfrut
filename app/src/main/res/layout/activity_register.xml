<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondo1"
        tools:context=".presentation.authentification.registro.view.RegisterActivity">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/corazon"
            android:id="@+id/icono2"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>
    <TextView
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tituloR"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="#116530"
            android:textSize="20dp"
    />
    <TextView
            android:text="Nombre(s)"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:id="@+id/textView"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="@string/nombrecompleto"
            android:ems="10"
            android:id="@+id/etx_fullname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:minHeight="48dp"/>
    <TextView
            android:text="Apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView2"/>
    <EditText
            android:id="@+id/etx_lastname"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"
            android:hint="Apellido"
    />
    <TextView
            android:text="Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView3"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textEmailAddress"
            android:hint="@string/correo_electronico"
            android:ems="10"
            android:id="@+id/etx_emailRegistro"
            app:layout_constraintTop_toBottomOf="@+id/etx_fullname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:id="@+id/textView4"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/contrase_a"
            android:ems="10"
            android:id="@+id/etx_passwordRegistro"
            app:layout_constraintTop_toBottomOf="@+id/etx_emailRegistro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:minHeight="48dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="Verificar Contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/textView5"/>
    <EditText
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/confirme_contrase_a"
            android:ems="10"
            android:id="@+id/etx_passwordRegistro2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_passwordRegistro"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck"/>
    <Button
            android:text="registrarse"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:id="@+id/buttonRegistro"
            android:backgroundTint="#116530"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_passwordRegistro2"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.20"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/progressSignUp"
            app:layout_constraintTop_toBottomOf="@+id/etx_passwordRegistro2"
            android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.498"/>

</LinearLayout>