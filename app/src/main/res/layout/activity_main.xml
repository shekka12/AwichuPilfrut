<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@drawable/fondo1"
		tools:context=".presentation.authentification.login.view.MainActivity">

	<ImageView
			android:layout_width="200dp"
			android:layout_height="90dp"
			android:layout_gravity="center"
			app:srcCompat="@drawable/awichu"
			android:id="@+id/tituloAwichu"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
			android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
	<ImageView
			android:layout_width="160dp"
			android:layout_height="200dp"
			android:layout_gravity="center"
			app:srcCompat="@drawable/logo2"
			android:id="@+id/imageView9"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
			app:layout_constraintTop_toBottomOf="@+id/tituloAwichu" android:layout_marginTop="16dp"/>
	<EditText

			android:layout_width="340dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:background="@color/white"
			android:inputType="textPersonName"
			android:ems="10"
			android:hint="Correo electrónico"
			android:id="@+id/etx_email"
			android:textSize="16dp"
			android:paddingLeft="17dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.49"
			android:minHeight="48dp"
			tools:ignore="Autofill,HardcodedText" android:textColorLink="@color/teal_200"
			android:textColorHighlight="@color/teal_700" android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView9"
			android:layout_marginTop="16dp"/>

	<com.google.android.material.textfield.TextInputLayout
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/black_overlay"
			app:endIconMode="password_toggle"
			tools:visibility="visible"
			app:passwordToggleTint="@color/teal_200"
			app:boxStrokeColor="@color/black_overlay"
			app:endIconTint="#009688"
			app:startIconTint="#009688"
			android:textColorHint="@color/black_overlay"
			app:hintTextColor="#009688"
			app:helperTextEnabled="false"
			app:layout_constraintTop_toBottomOf="@+id/etx_email"
			android:layout_marginTop="16dp"
			android:id="@+id/textInputLayout"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp">

		<com.google.android.material.textfield.TextInputEditText
				android:layout_width="340dp"
				android:layout_height="match_parent"
				android:id="@+id/etx_password"
				android:hint="@string/contrase_aLogin"
				android:textSize="16dp"
				android:inputType="textPassword"
				android:minHeight="48dp"
				android:textColorLink="@color/teal_200"
				android:textColorHighlight="@color/teal_700"
				tools:ignore="Autofill,TouchTargetSizeCheck"
				android:background="@color/white"
				android:textAllCaps="false"
		/>
	</com.google.android.material.textfield.TextInputLayout>


	<Button
			android:text="iniciar sesion"
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:backgroundTint="#05445E"
			android:textColor="@color/white"
			android:id="@+id/btn_signIn"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
			android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
	<Button
			android:text="registrarse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:backgroundTint="#116530"
			android:textColor="@color/white"
			android:id="@+id/buttonSignUp"
			app:layout_constraintTop_toBottomOf="@+id/btn_signIn"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="16dp"
			app:layout_constraintHorizontal_bias="0.498" android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp"/>
	<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="match_parent"
			android:layout_height="38dp"
			android:id="@+id/progressBar_singIn"
			android:elevation="2dp"
			android:visibility="gone"
			app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
			android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="1.0"/>
	<TextView
			android:text="¿Olvidaste tu contraseña?"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:textSize="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:id="@+id/txt_recoverPassword"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/buttonSignUp" android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>