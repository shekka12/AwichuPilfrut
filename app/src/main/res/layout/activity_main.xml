<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".presentation.login.view.MainActivity">

	<EditText

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:hint="@string/correo_electronico"
			android:id="@+id/etx_email"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="208dp"
			app:layout_constraintHorizontal_bias="0.497" android:minHeight="48dp"
			tools:ignore="Autofill,HardcodedText"/>

	<EditText

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:ems="10"
			android:hint="@string/contrase_a"
			android:id="@+id/etx_password"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/etx_email" android:minHeight="48dp" tools:ignore="Autofill"/>
	<Button

			android:text="iniciar sesion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/btn_signIn"
			app:layout_constraintTop_toBottomOf="@+id/etx_password"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="84dp" app:layout_constraintHorizontal_bias="0.498"/>

	<ProgressBar

			style="?android:attr/progressBarStyle"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:id="@+id/progressBar_singIn"
			android:visibility="gone"
			app:layout_constraintTop_toBottomOf="@+id/etx_password"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.498"
			app:layout_constraintBottom_toTopOf="@+id/btn_signIn"/>
	<Button
			android:text="registrarse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/buttonSignUp"
			app:layout_constraintTop_toBottomOf="@+id/btn_signIn"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="28dp"
			app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>