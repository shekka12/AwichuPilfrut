<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@drawable/fondo1"
		tools:context=".presentation.login.view.MainActivity">

	<ImageView
			android:layout_width="200dp"
			android:layout_height="90dp"
			android:layout_marginTop="16dp"
			android:layout_gravity="center"
			app:srcCompat="@drawable/awichu"
			android:id="@+id/tituloAwichu"/>
	<ImageView
			android:layout_width="160dp"
			android:layout_height="200dp"
			android:layout_gravity="center"
			android:layout_marginTop="16dp"
			app:srcCompat="@drawable/logo2"
			android:id="@+id/imageView9"/>
	<EditText

			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/white"
			android:inputType="textPersonName"
			android:ems="10"
			android:hint="@string/correo_electronico"
			android:id="@+id/etx_email"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="32dp"
			app:layout_constraintHorizontal_bias="0.497"
			android:minHeight="48dp"
			tools:ignore="Autofill,HardcodedText"/>
	<EditText
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="32dp"
			android:background="@color/white"
			android:layout_gravity="center"
			android:inputType="textPassword"
			android:ems="10"
			android:hint="@string/contrase_a"
			android:id="@+id/etx_password"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/etx_email"
			android:minHeight="48dp" tools:ignore="Autofill"/>
	<Button
			android:text="iniciar sesion"
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:backgroundTint="#05445E"
			android:textColor="@color/white"
			android:id="@+id/btn_signIn"
			app:layout_constraintTop_toBottomOf="@+id/etx_password"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="32dp"
			app:layout_constraintHorizontal_bias="0.498"/>

	<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="20dp"
			android:layout_height="50dp"
			android:id="@+id/progressBar_singIn"
			android:visibility="gone"
			app:layout_constraintTop_toBottomOf="@+id/etx_password"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.498"
			app:layout_constraintBottom_toTopOf="@+id/btn_signIn"/>
	<Button
			android:text="registrarse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:backgroundTint="#116530"
			android:textColor="@color/white"
			android:id="@+id/buttonSignUp"
			app:layout_constraintTop_toBottomOf="@+id/btn_signIn"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="32dp"
			app:layout_constraintHorizontal_bias="0.498"/>
</LinearLayout>