<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:id="@+id/scrollView"
			android:fillViewport="true"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout

		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"

		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@drawable/fondo1"
		tools:context=".presentation.authentification.login.view.MainActivity"
		tools:ignore="ScrollViewSize">


		<ImageView
				android:layout_width="200dp"
				android:layout_height="90dp"
				android:layout_gravity="center"
				app:srcCompat="@drawable/awichu"
				android:id="@+id/tituloAwichu"
				app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
				android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
		<ImageView
				android:layout_width="160dp"
				android:layout_height="200dp"
				android:layout_gravity="center"
				app:srcCompat="@drawable/logo2"
				android:id="@+id/imageView9"
				app:layout_constraintTop_toBottomOf="@+id/tituloAwichu" app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
				android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>
		<EditText

				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@color/white"
				android:inputType="textPersonName"
				android:ems="10"
				android:hint="Correo electrónico"
				android:id="@+id/etx_email"
				android:textSize="16dp"
				android:paddingLeft="17dp"

				android:minHeight="48dp"
				tools:ignore="Autofill,HardcodedText"
				android:textColorLink="@color/teal_200"
				android:textColorHighlight="@color/teal_700"
				app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
				android:layout_marginEnd="40dp" android:layout_marginTop="16dp"/>


		<com.google.android.material.textfield.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@color/cardview_shadow_end_color"

				app:counterEnabled="true"
				app:counterMaxLength="14"
				android:elevation="3dp"
				app:counterTextColor="@color/design_default_color_error"
				android:backgroundTint="@color/black_overlay"
				app:boxStrokeColor="@color/black_overlay"
				app:endIconTint="#009688"
				app:startIconTint="#009688"
				android:textColorHint="@color/black_overlay"
				app:hintTextColor="#009688"
				app:helperTextEnabled="false"
				android:id="@+id/textInputLayout"
				android:visibility="visible"
				app:boxBackgroundMode="filled"
				app:boxBackgroundColor="@color/cardview_shadow_end_color"
				app:layout_constraintTop_toBottomOf="@+id/etx_email" app:layout_constraintStart_toStartOf="parent"
				android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="40dp" android:layout_marginEnd="40dp">

			<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/etx_password"
					android:hint="@string/contrase_aLogin"
					android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890"
					android:maxLength="14"
					android:textSize="16dp"
					android:inputType="textPassword"
					android:minHeight="48dp"
					android:textColorLink="@color/teal_200"
					android:textColorHighlight="@color/teal_700"
					tools:ignore="Autofill,TouchTargetSizeCheck"
					android:background="@color/white"
					android:textAllCaps="false"

			/>
		</com.google.android.material.textfield.TextInputLayout>

		<Button
				android:hint="Iniciar Sesión"
				android:textColorHint="@color/white"
				android:textSize="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:backgroundTint="#05445E"
				android:textColor="@color/white"
				android:id="@+id/btn_signIn"
				app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
				app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="56dp"
				android:layout_marginEnd="56dp"/>
		<Button
				android:hint="Registrarse"
				android:textSize="20dp"
				android:textColorHint="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:backgroundTint="#116530"
				android:textColor="@color/white"
				android:id="@+id/buttonSignUp"
				app:layout_constraintTop_toBottomOf="@+id/btn_signIn" app:layout_constraintStart_toStartOf="parent"
				android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="90dp" android:layout_marginEnd="90dp"
				app:layout_constraintHorizontal_bias="0.0"/>
		<ProgressBar
				style="?android:attr/progressBarStyle"
				android:layout_width="match_parent"
				android:layout_height="38dp"
				android:id="@+id/progressBar_singIn"
				android:elevation="2dp"
				android:visibility="gone"
				app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
				android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
				android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="1.0"/>
		<TextView
				android:text="¿Olvidaste tu contraseña?"
				android:textColor="@color/white"
				android:textStyle="bold"
				android:textSize="20dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textAlignment="center"
				android:id="@+id/txt_recoverPassword"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.562"
				app:layout_constraintTop_toBottomOf="@+id/buttonSignUp" android:layout_marginStart="32dp"
				android:layout_marginEnd="32dp" android:layout_marginTop="16dp"/>
		<ImageView
				android:id="@+id/ivHidePassword"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_hide_password_24"
				app:layout_constraintTop_toBottomOf="@+id/etx_email"
				app:layout_constraintBottom_toTopOf="@+id/btn_signIn"
				app:layout_constraintStart_toEndOf="@+id/textInputLayout" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
				app:layout_constraintHorizontal_bias="0.0"
				app:layout_constraintVertical_bias="0.392"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>